From 76b6ac551243bd1ca7f5f03f24451b9740751998 Mon Sep 17 00:00:00 2001
From: Fiona Behrens <me@kloenk.dev>
Date: Sat, 14 Jun 2025 11:25:47 +0000
Subject: [PATCH] certs: add genkey for kloenk

Signed-off-by: Fiona Behrens <me@kloenk.dev>
---
 certs/x509.genkey | 18 ++++++++++++++++++
 1 file changed, 18 insertions(+)
 create mode 100644 certs/x509.genkey

diff --git a/certs/x509.genkey b/certs/x509.genkey
new file mode 100644
index 000000000000..78c95d334d57
--- /dev/null
+++ b/certs/x509.genkey
@@ -0,0 +1,18 @@
+[ req ]
+default_bits = 4096
+distinguished_name = req_distinguished_name
+prompt = no
+string_mask = utf8only
+x509_extensions = myexts
+
+[ req_distinguished_name ]
+O = kloenk
+CN = Build time autogenerated kernel key
+emailAddress = kernel-signing@kloenk.dev
+#emailAddress = unspecified.user@unspecified.company
+
+[ myexts ]
+basicConstraints=critical,CA:FALSE
+keyUsage=digitalSignature
+subjectKeyIdentifier=hash
+authorityKeyIdentifier=keyid
